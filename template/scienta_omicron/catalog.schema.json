{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://rde.nims.go.jp/rde/dataset-templates/NIMS_XPS/catalog.schema.json",
    "type": "object",
    "required": [
        "catalog"
    ],
    "properties": {
        "catalog": {
            "type": "object",
            "label": {
                "ja": "データカタログ",
                "en": "Data Catalog"
            },
            "properties": {
                "dataset_title": {
                    "type": "string",
                    "label": {
                        "ja": "データセット名",
                        "en": "Dataset Title"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "abstract": {
                    "type": "string",
                    "label": {
                        "ja": "概要",
                        "en": "Abstract"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 12
                    }
                },
                "data_creator": {
                    "type": "string",
                    "label": {
                        "ja": "作成者",
                        "en": "Data Creator"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "language": {
                    "type": "string",
                    "label": {
                        "ja": "言語",
                        "en": "Language"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "experimental_apparatus": {
                    "type": "string",
                    "label": {
                        "ja": "使用装置",
                        "en": "Experimental Apparatus"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "number_of_instances": {
                    "type": "string",
                    "label": {
                        "ja": "インスタンス数",
                        "en": "Number of instances"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "raw_data_type": {
                    "type": "string",
                    "label": {
                        "ja": "データの種類",
                        "en": "Data Type"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "raw_data_size": {
                    "type": "string",
                    "label": {
                        "ja": "生データサイズ（典型例）",
                        "en": "Raw data size (typical)"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "data_attributes_typical": {
                    "type": "string",
                    "label": {
                        "ja": "データ属性（典型例）",
                        "en": "Data attributes (typical)"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 7
                    }
                },
                "file_type": {
                    "type": "string",
                    "label": {
                        "ja": "ファイル形式",
                        "en": "File type"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "file_information": {
                    "type": "string",
                    "label": {
                        "ja": "ファイル情報",
                        "en": "File information"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "remarks": {
                    "type": "string",
                    "label": {
                        "ja": "備考",
                        "en": "Remarks"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                },
                "references": {
                    "type": "string",
                    "label": {
                        "ja": "参考論文",
                        "en": "References"
                    },
                    "options": {
                        "widget": "textarea",
                        "rows": 3
                    }
                }
            }
        }
    }
}